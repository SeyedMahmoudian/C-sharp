@using Microsoft.AspNetCore.Http;
@model IEnumerable<Assignment1.Models.Comment>


@{
    Layout = "_Layout";
}
<br />
<br />
<br />
<br />
<br />

<div class="container">
    <hr class="fdivide">
    <h2>Blog Details</h2>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Content Preview</th>
            <th>Date Posted</th>
        </tr>
        <tr>
            <td>@Context.Session.GetString("Title")</td>
            @{
                string str = new string(@Context.Session.GetString("Content").Take(4000).ToArray());

                <td>@str</td>
            }
            <td>@Context.Session.GetString("Posted")</td>
        </tr>
    </table>
    <h3>Comments</h3>
    @foreach (var item in Model)
    {
        <p>@item.Content</p>
        <p><i>Comment by User #@item.UserId</i></p>
        <br />
    }   
</div>
<div class="container marketing">
    <div class="jumbotron ">
        <form asp-controller="Home" asp-action="AddComment" class="form-signin">
            <h2 class="form-signin-heading text-center">Post a comment</h2>
          
            <input name="Content" type="text" class="form-control" placeholder="Content" required autofocus>
            <button class="btn btn-lg btn-primary btn-block " type="submit" value="EditBlog">Post</button>
        </form>
    </div>
</div>
