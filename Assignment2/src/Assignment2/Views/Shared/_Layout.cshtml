@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" , initial-scale=1 />
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

    </environment>

    @section Styles {
    }

</head>

<body>
    <header>
        <div class="navbar-wrapper">
            <div class="container">
                <nav class="navbar navbar-inverse navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand text-center" href="@Url.Action("Index", "Home")">Blog Engine</a>
                        </div>

                        @if (Context.Session.GetInt32("RoleId") == 2)
                        {
                            <div id="navbar" class="navbar-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                                    <li><a href="@Url.Action("Register", "Home")">Register</a></li>
                                    <li><a href="@Url.Action("AddBlogPost", "Home")">AddBlog</a></li>
                                    <li><a href="@Url.Action("EditProfile","Home", new { id = Context.Session.GetInt32("UserId") })">Edit Profile</a></li>
                                    <li><a href="@Url.Action("ViewBadWords","Home")">Add Bad Words</a></li>

                                </ul>
                            </div>
                        }
                        else
                        { @if (Context.Session.GetInt32("RoleId") == 1)
                        {
                            <div id="navbar" class="navbar-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                                    <li><a href="@Url.Action("EditProfile", "Home")">Edit Profile</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div id="navbar" class="navbar-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                                    <li><a href="@Url.Action("Login", "Home")">Login</a></li>
                                    <li><a href="@Url.Action("Register", "Home")">Register</a></li>
                                  
                                </ul>
                            </div>

                        }
                        }
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>
    <footer class="footer panel-footer">
        <div class="container text-center">
            <h3> Seyedamin Seyedmahmoudian - seye0005@algonquinlive.com - 040813340</h3>
        </div>
    </footer>
</body>
</html>