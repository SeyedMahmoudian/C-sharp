﻿@model Assignment2.Models.BlogPosts


@{
    Layout = "_Layout";
}
<br />
<br />
<br />
<br />
<br />

<div class="container">
    <form action="/Home/CreateBlog" method="post">
        <h2 class="form-group-lg">Post blog</h2>

        <label for="Title">Blog Title</label>
        <input type="text" class="form-control" id="Title" rows="3" asp-for="Title" autofocus maxlength="200" />

        <label for="content">Short Description</label>
        <input asp-for="ShortDescription" id="ShortDescription" class="form-control" placeholder="Short Description" maxlength="400" required autofocus />

        <label for="content">Blog Content</label>
        <textarea class="form-control" id="Content" rows="3" asp-for="Content" autofocus maxlength="4000"></textarea>

        <label for="Posted" class="col-sm-2 col-form-label">Posted</label>
        <div class="col-sm-10">
            <input class="form-control" type="date" value="2017-10-03" asp-for="Posted" id="Posted" />
        </div>


        <label>Make this available now?</label>
        <select asp-for="IsAvailable">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>

        <button class="btn btn-primary btn-lg btn-block" type="submit" value="AddBlogPost">Create</button>
    </form>
</div>
