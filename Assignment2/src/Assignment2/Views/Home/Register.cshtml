@model Assignment2.Models.Users
@{
    Layout = "_Layout";
}
<form asp-controller="Home" asp-action="CreateUser">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input required="required" class="form-control" id="FirstName" placeholder="First Name" asp-for="FirstName" />
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input required="required" class="form-control" id="Lastname" placeholder="Last Name" asp-for="LastName" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" required="required" class="form-control" placeholder="example@example.com" id="EmailAddress" asp-for="EmailAddress" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" required="required" class="form-control" placeholder="Password" id="Password" asp-for="Password" />
    </div>

    <div class="form-group">
        <label>Date Of Birth</label>
        <input type="date" required="required" class="form-control" id="DateOfBirth" max="2016-12-30"  asp-for="DateOfBirth" />
    </div>

    <div class="form-group">
        <label>Address</label>
        <input type="text" required="required" class="form-control" id="Address" placeholder="Address" asp-for="Address" />
    </div>

    <div class="form-group">
        <label>City</label>
        <input type="text" required="required" class="form-control" id="City" placeholder="City" asp-for="City" />
    </div>

    <div class="form-group">
        <label>PostalCode</label>
        <input type="text" required="required" class="form-control" id="PostalCode" placeholder="PostalCode" asp-for="PostalCode" />
    </div>
    <div class="form-group">
        <label>Country</label>
        <input type="text" required="required" class="form-control" id="Country" placeholder="Country" asp-for="Country" />
    </div>



    <div class="form-group">
        <select asp-for="RoleId">
            <option value=1>General User</option>
            <option value=2>Blog Poster</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary btn-lg btn-block" value="Register">Register</button>

</form>

