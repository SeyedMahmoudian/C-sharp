<div class="container">
    <form asp-controller="Home" asp-action="EditBlog">
        <input type="hidden" value="@Model.BlogPostId" name="BlogPostId" />
        <h2 class="form-group-lg">Post blog</h2>

        <label for="Title">Blog Title</label>
        <input type="text" class="form-control" id="Title" rows="3" asp-for="Title" autofocus />

        <label for="content">Short Description</label>
        <input asp-for="ShortDescription" id="ShortDescription" class="form-control" placeholder="Short Description" required autofocus />

        <label for="content">Blog Content</label>
        <textarea class="form-control" id="Content" rows="3" asp-for="Content" autofocus></textarea>

        <label for="Posted" class="col-sm-2 col-form-label">Posted</label>
        <div class="col-sm-10">
            <input class="form-control" type="date" value="2017-10-03" asp-for="Posted" id="Posted" />
        </div>

        <label>Make this available now ?</label>
        <select asp-for="IsAvailable">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    
      
        <button class="button" type="submit" value="EditBlogt">Edit This Blog</button>
    </form>
</div>

<h4>Add Image</h4>
<form asp-controller="Home" asp-action="UploadImage" enctype="multipart/form-data">
    <input type="file" name="files" class="btn btn-block" data-show="false" /> <button name="upload">Add</button>
</form>
