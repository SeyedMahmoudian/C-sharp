@model IEnumerable<Assignment2.Models.BadWords>
@{
    Layout = "_Layout";
}
<br />
<br />
<br />
<br />
<br />
<form asp-controller="Home" asp-action="AddBadWordToDatabase">
    <fieldset>
        <legend>Add</legend>
        <label align="left">Word: </label>
        <input type="text" name="badword" />
        <input type="submit" value="Add" />
    </fieldset>
</form>
<br />
<div class="row">
    <div class="col-lg-12 col-sm-3">
        <h3>List of bad words</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-sm-3">

        @if (Model == null || Model.Count() == 0)
        {
            <p>No bad words to display.</p>
        }
        else
        {
            @foreach (var item in Model)
            {
                @item.Word
                <a asp-controller="Home" asp-action="DeleteBadWord" asp-route-id="@item.BadWordId">Delete</a>
                <br />
            }
        }
    </div>
</div>

